<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Insert title here</title>
</head>
<body>
<c:choose>
	<c:when test="${not empty typeId}">
		<form action="TypeServlet?flag=updateType" method="post">
               <input type="hidden" id="typeId" name="typeId" value="${typeId}"/>
               commodityType<input type="text" name="commodityType" id="commodityType" value="${commodityType}"/>
               typeName<input type="text" name="typeName" id="typeName" value="${typeName}"/>
               shelves<input type="text" name="shelves" id="shelves" value="${shelves}"/>
				<input value="提交" type="submit" />
		</form>
	</c:when>
	<c:otherwise>
		<form action="TypeServlet?flag=insertType" method="post">
               <input type="hidden" id="typeId" name="typeId" value="${typeId}"/>
               commodityType<input type="text" name="commodityType" id="commodityType" value="${commodityType}"/>
               typeName<input type="text" name="typeName" id="typeName" value="${typeName}"/>
               shelves<input type="text" name="shelves" id="shelves" value="${shelves}"/>
		<input value="提交" type="submit" />
		</form>
	</c:otherwise>
</c:choose>
</body>
  <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
  <script>
  function ifOver(){
			var shelves = $("#shelves").val();
			if(shelves == 0){
				return true;
			}
	        $.ajax({
	            type: "POST",
	            url: "TypeServlet",
	            data: { flag: "queryShelveNumber"},
	            dataType: "json",
	            success: function(msg) {
	            	console.log(msg);
	                if("can" == msg){
	                	return true;
	                }else{
	                	alert("超过规定上架数量");
	                	return false;
	                }
	            },
	            error: function(xhr, status, error) {
	                console.error("AJAX Error:", status, error);
	            }
	        });
  }
  		$(function(){
  			 $("#shelves").blur(function(){
  				var shelves = $("#shelves").val();
  				if(shelves == 0){
  					return true;
  				}
  		        $.ajax({
  		            type: "POST",
  		            url: "TypeServlet",
  		            data: { flag: "queryShelveNumber"},
  		            dataType: "json",
  		            success: function(msg) {
  		            	console.log(msg);
  		                if("can" == msg){
  		                	return true;
  		                }else{
  		                	alert("超过规定上架数量");
  		                	return false;
  		                }
  		            },
  		            error: function(xhr, status, error) {
  		                console.error("AJAX Error:", status, error);
  		            }
  		        });
  			 });
  			$("form").on("submit",function(){
  				if(!ifOver()){
  					alert("填写错误");
  					return false;
  				}
  				return true;
  			});
  		})
  </script>
</html>